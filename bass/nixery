#!/usr/bin/env bass

(def *memos* *dir*/bass.lock)

(use (.git (linux/alpine/git))
     (git:github.com/vito/tabs/ref/main/nix.bass))

(defn main [uri ref]
  (emit
    (nix:result
      (cd (git:checkout uri (git:ls-remote uri ref))
        ($ nix-build -A nixery-image))
      ./image.tar)
    *stdout*))
