#!/usr/bin/env bass

(defn main []
  (for [{src :src
         version (:version "dev")
         os (:os "linux")
         arch (:arch "amd64")} *stdin*]
    (use (src/project))
    (logf "building and smoke-testing %s" project:*root*)
    (let [dist (project:build project:*root* version os arch)]
      (project:smoke-test dist)
      (emit dist *stdout*))))
