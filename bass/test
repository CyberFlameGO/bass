#!/usr/bin/env bass

(use (*dir*/bass))

; runs tests against src passed on *stdin*
;
; Emits code coverage to *stdout*.
(defn main testflags
  (for [{:src src} *stdin*]
    (let [tests (bass:tests src ["./..." & testflags])]
      (log "running tests")
      (run tests)
      (emit {:coverage tests/cover.html} *stdout*))))
