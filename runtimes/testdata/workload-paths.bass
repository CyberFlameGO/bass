(def create-files
  "echo 42 > foo; mkdir some-dir; echo '\"hello\"' > some-dir/some-file")

(def hello
  (let [create (alpine .sh :args ["-c" create-files]
                       :response {:exit-code true})]
    (run create)
    (path create ./)))

(let [cat (run (alpine .cat :args [hello/foo hello/some-dir/some-file]
                       :response {:stdout true}))]
  [(next cat)
   (next cat)])
