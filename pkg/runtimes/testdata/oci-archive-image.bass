(def *memos* *dir*/memos.json)

(def hello
  (subpath
    (from (linux/alpine)
      ($ apk add skopeo)
      ($ skopeo copy "docker://hello-world" "oci-archive:image.tar:latest"))
    ./image.tar))

(def hello-image
  {:file hello
   :platform {:os "linux"}
   :tag "latest"})

(def hello-content
  (read (from hello-image ($ /hello)) :unix-table))

; first line is blank
(next hello-content)

; Hello from Docker!
(next hello-content)
